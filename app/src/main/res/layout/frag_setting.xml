<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <!--消息推送-->
    <com.zhy.android.percent.support.PercentRelativeLayout
        android:id="@+id/pushRl"
        android:layout_height="@dimen/activity_title_height"
        android:layout_width="match_parent"
        android:layout_margin="@dimen/layout_margin"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        >
        <ImageView
            android:id="@+id/pushIv"
            style="@style/NormalStyle"
            app:layout_heightPercent="80%"
            app:layout_widthPercent="20%"
            android:layout_alignParentLeft="true"
            android:src="@mipmap/push"/>
        <TextView
            style="@style/NormalStyle"
            app:layout_heightPercent="80%"
            app:layout_widthPercent="20%"
            android:gravity="center_vertical"
            android:layout_toRightOf="@+id/pushIv"
            android:text="@string/setting_messgepush"
            android:textSize="@dimen/TextSize2"/>
        <ImageButton
            android:id="@+id/msgPushIb"
            style="@style/NormalStyle"
            app:layout_heightPercent="80%"
            app:layout_widthPercent="20%"
            android:layout_alignParentRight="true"
            android:background="@color/white"
            android:src="@mipmap/forward" />

    </com.zhy.android.percent.support.PercentRelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/green" />

    <!--关于-->
    <com.zhy.android.percent.support.PercentRelativeLayout
        android:id="@+id/aboutRl"
        android:layout_height="@dimen/activity_title_height"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_margin="@dimen/layout_margin"
        android:gravity="center_vertical"
        >
        <ImageView
            android:id="@+id/aboutIv"
            style="@style/NormalStyle"
            app:layout_heightPercent="80%"
            app:layout_widthPercent="20%"
            android:layout_alignParentLeft="true"
            android:src="@mipmap/about"/>
        <TextView
            style="@style/NormalStyle"
            app:layout_heightPercent="80%"
            app:layout_widthPercent="20%"
            android:gravity="center_vertical"
            android:layout_toRightOf="@+id/aboutIv"
            android:text="@string/setting_about"
            android:textSize="@dimen/TextSize2"/>
        <ImageButton
            android:id="@+id/aboutIb"
            style="@style/NormalStyle"
            app:layout_heightPercent="80%"
            app:layout_widthPercent="20%"
            android:layout_alignParentRight="true"
            android:background="@color/white"
            android:src="@mipmap/forward" />
    </com.zhy.android.percent.support.PercentRelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/green" />

</com.zhy.android.percent.support.PercentLinearLayout>